<%- include("../partials/header.ejs") %>
    <div class="card mb-4">
        <% if(cohort.logo_url){%>
            <img src="<%-cohort.logo_url%>" alt="Cohort logo" class="card-img-top">
        <%}%>
        <div class="card-body">
            <h5><%-cohort.name%></h5>
            <p class="card-text">
                <%- cohort.members %>
                <em>Created at <%- new Date(cohort.created_at) %></em>
            </p>
            <form action="/cohorts/<%- cohort.id%>" method="POST">
                <input type="hidden" name="_method" value="DELETE">
            <input type="submit" class="btn btn_outline_danger" value="DELETE">
            </form>
            <a href="/cohorts/<%-cohort.id%>/edit" class="btn btn_outline_success">Edit</a>

        </div>

    </div>
<%- include("../partials/footer.ejs") %>